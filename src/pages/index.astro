		// Desktop/tablet table render
		if (leaderboardBody) {
			leaderboardBody.innerHTML = filteredMembers.map((member) => {
				const rankBadge = getRankBadge(member.rank);
				const topRowClass = getTopRowClass(member.rank);
				
				return `
